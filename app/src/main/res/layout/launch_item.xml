<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_layout"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        android:layout_margin="@dimen/card_view_margin"
        app:cardCornerRadius="@dimen/card_corner_radius"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/list_view_header_size"
                android:layout_margin="@dimen/card_view_margin"
                android:textColor="@color/spacex_blue"
                android:id="@+id/tv_mission_name"
                android:text="SES-9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subheader_text_size"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_margin="@dimen/card_view_margin"
                android:id="@+id/tv_launch_date"
                android:text="2018-07-22"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
